<h1>Users Index</h1>

<table>
  <tr><%= link_to 'New User', new_user_path %></tr>
  <tr>
    <% @users.each do |user| %>
      <td>
        <%= user.name %>
      </td>
      <td>
        <%= link_to user.group.name, group_path(user.group) %>
      </td>
      <td>
        <%= link_to 'Delete',
            user_path(user),
            method: :delete,
            data: { confirm: 'Delete this User?' } %>
      </td>
    <% end %>
  </tr>
</table>
