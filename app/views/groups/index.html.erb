<h1>Groups Index</h1>

<table>
  <tr><%= link_to 'New Group', new_group_path %></tr>
  <% @groups.each do |group| %>
    <tr>
      <td>
        <%= link_to group.name, group_path(group) %>
      </td>
      <td>
        <%= link_to 'Delete',
            group_path(group),
            method: :delete,
            data: { confirm: 'Delete this Group and all its Users?' } %>
      </td>
    </tr>
  <% end %>
</table>
